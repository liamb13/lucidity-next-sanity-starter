{
  "name": "apps-sanity",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "package.json",
  "author": {
    "name": "Jamie Warburton",
    "url": "https://github.com/jamiewarb"
  },
  "license": "MIT",
  "homepage": "https://github.com/hex-digital/lucidity-next-sanity-starter",
  "repository": {
    "type": "git",
    "url": "https://github.com/hex-digital/lucidity-next-sanity-starter",
    "directory": "apps/sanity"
  },
  "scripts": {
    "dev": "sanity dev",
    "start": "sanity start",
    "build": "sanity build",
    "deploy": "sanity deploy",
    "deploy-graphql": "sanity graphql deploy",
    "extract-schema": "npx sanity schema extract",
    "generate:blocks": "tsx features/modular-content-blocks/scripts/generate-sanity-block-schema-imports.ts",
    "generate:types": "npx sanity typegen generate",
    "lint": "pnpm eslint . && pnpm prettier",
    "lint:fix": "pnpm eslint . --fix && pnpm prettier:fix",
    "postinstall": "pnpm turbo extract-schema generate:blocks generate:types",
    "prebuild": "pnpm turbo extract-schema generate:blocks generate:types",
    "predev": "pnpm turbo generate:blocks generate:types",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@pkg/common": "workspace:*",
    "@pkg/modular-content-blocks": "workspace:*",
    "@pkg/sanity-toolkit": "workspace:*",
    "@pkg/utilities": "workspace:*",
    "@portabletext/toolkit": "2.0.17",
    "@sanity/client": "6.28.3",
    "@sanity/code-input": "5.1.2",
    "@sanity/icons": "3.7.0",
    "@sanity/image-url": "1.1.0",
    "@sanity/ui": "2.15.7",
    "@sanity/vision": "3.80.1",
    "@tinloof/sanity-studio": "1.9.1",
    "groq": "3.80.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.5.0",
    "sanity": "3.80.1",
    "styled-components": "6.1.16",
    "vite": "6.2.2"
  },
  "devDependencies": {
    "@sanity/eslint-config-studio": "5.0.2",
    "@sanity/types": "3.80.1",
    "@types/react": "19.0.12",
    "@vitest/coverage-v8": "3.0.9",
    "@vitest/ui": "3.0.9",
    "eslint": "9.23.0",
    "prettier": "3.5.3",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "vitest": "3.0.9"
  },
  "dependenciesMeta": {
    "@pkg/common": {
      "injected": true
    },
    "@pkg/modular-content-blocks": {
      "injected": true
    },
    "@pkg/sanity-toolkit": {
      "injected": true
    },
    "@pkg/utilities": {
      "injected": true
    }
  }
}
